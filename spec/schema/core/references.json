[
  {
    "description": "schema references",
    "tests": [
      {
        "description": "should handle internal $refs",
        "schema": {
          "definitions": {
            "integer": {
              "type": "integer"
            },
            "positive": {
              "minimum": 0,
              "maximum": 100
            }
          },
          "type": "object",
          "properties": {
            "weakNumber": {
              "$ref": "#/definitions/integer"
            },
            "multipleOf5": {
              "allOf": [
                {
                  "$ref": "#/definitions/positive"
                },
                {
                  "$ref": "#/definitions/integer"
                },
                {
                  "multipleOf": 5
                }
              ]
            }
          },
          "required": ["weakNumber", "multipleOf5"]
        },
        "valid": true
      },
      {
        "description": "should handle provided $refs only",
        "schema": {
          "type": "object",
          "properties": {
            "stringValues": {
              "type": "array",
              "items": {
                "$ref": "a://str"
              }
            }
          },
          "required": ["stringValues"]
        },
        "refs": [
          {
            "id": "a://str",
            "type": "string"
          }
        ],
        "valid": true
      },
      {
        "description": "should have all required properties with the same internal reference",
        "valid": true,
        "schema": {
          "definitions": {
            "ref-obj": {
              "type": "object",
              "properties": {
                "test": {
                  "type": "string",
                  "faker": "lorem.words"
                }
              }
            }
          },
          "type": "object",
          "required": [ "prop1", "prop2", "prop3", "prop4", "prop5" ],
          "properties": {
            "prop1": {
              "$ref": "#/definitions/ref-obj"
            },
            "prop2": {
              "$ref": "#/definitions/ref-obj"
            },
            "prop3": {
              "$ref": "#/definitions/ref-obj"
            },
            "prop4": {
              "$ref": "#/definitions/ref-obj"
            },
            "prop5": {
              "$ref": "#/definitions/ref-obj"
            }
          }
        }
      }
    ]
  }
]
